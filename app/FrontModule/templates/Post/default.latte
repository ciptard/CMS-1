{var $title = $post->name}
{var $desc = $post->description}
{var $keys = $post->keywords}

{block content}

<h2>{$post->name}</h2>

<h3>{$post->description}</h3>

{if $post->markdown}
	{!$post->content|markdown}
{else}
	{!$post->content}
{/if}


<p><small>{$post->created|date:'%d.%m.%y'} | {$post->hit} Views</small></p>

{if $post->comment}
	{control comments}
{/if}

