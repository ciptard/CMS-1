{var $title='List of newsreel'}

{#content}

    <p><a n:href="Newsreel:add">Add new newsreel</a> </p>

    {snippet #newsreel}
        {if count($newsreels)}
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
	                    <th>Date</th>
	                    <th>Title</th>
	                    <th>Content</th>
	                    <th>Hit</th>
	                    <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                <tr n:foreach="$newsreels as $newsreel">
                    <td>{$newsreel->date|date:'%d.%m.%y'}</td>
                    <td>{$newsreel->title}</td>
                    <td>{$newsreel->content|striptags|truncate:500}</td>
                    <td>{$newsreel->hit}</td>
                    <td>
                        <a n:href="Newsreel:edit $newsreel->id">Edit</a>
                        <a n:href="delete! $newsreel->id" class="ajax">X</a>
                    </td>
                </tr>
                </tbody>
            </table>
        {else}
            <h4>None</h4>
        {/if}
    {/snippet}
{/#}