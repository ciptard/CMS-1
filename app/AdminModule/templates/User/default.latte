{var $title = 'List of Users'}

{#content}

	<p><a n:href="User:add">Add new user</a></p>

	{snippet #users}
		{if count($users)}
			<table class="table table-striped table-condensed">
				<thead>
					<tr>
						<th>Role</th>
						<th>Email</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					<tr n:foreach="$users as $user">
						<td>{$user->role}</td>
						<td>{$user->email}</td>
						<td>
							<a n:href="Delete! $user->id" class="ajax">X</a>
							<a n:href="User:edit $user->id">Edit</a>
						</td>
					</tr>
				</tbody>
			</table>
		{/if}

	{/snippet}